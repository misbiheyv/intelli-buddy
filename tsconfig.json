{
	"files": ["src/index.ts"],
	"compilerOptions": {
		"baseUrl": ".",
		"target": "es5",
		"module": "commonjs",
		"downlevelIteration": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowJs": true,
		"importHelpers": true,
		"outDir": "dist",
		"lib": ["dom", "esnext"],
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"strict": true,
		"noImplicitAny": false,
		"declaration": true
	},
	"include": [
		"src/**/*",
		"index.d.ts"
	]
}
